@model gestionBiblioteca.Models.Book

@{
    var authors = ViewBag.AuthorList;
    var categories = ViewBag.CategoryList;
}

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2 class="text-center fs-1 fw-bold">Actualizar Libro</h2>
        <form asp-controller="Book" asp-action="Update" method="post" class="mt-5 d-flex flex-column gap-3">
            <input asp-for="IdBook" type="hidden">
            <div class="d-flex flex-column gap-2">
                <label>Titulo Libro</label>
                <input type="text" asp-for="Title" class="form-control">
            </div>
            <div class="mt-3 d-flex flex-column gap-2">
                <label>Disponibilidad</label>
                <select asp-for="Status" class="form-select" aria-label="Default select example">
                    <option selected>Seleccione La Disponibilidad</option>
                    <option value="true">Disponible</option>
                    <option value="false">No Disponible</option>
                </select>
            </div>
            <div class="mt-3 d-flex flex-column gap-2">
                <label>Autor</label>
                <select class="form-select" asp-for="IdAuthor" aria-label="Default select example">
                    <option selected>Seleccione El Autor</option>
                    @foreach (var author in authors)
                    {
                        <option value="@author.IdAuthor">@author.Name</option>
                    }
                </select>
            </div>
            <div class="mt-3 d-flex flex-column gap-2">
                <label>Categoria</label>
                <select class="form-select" asp-for="IdCategory" aria-label="Default select example">
                    <option selected>Seleccione La Categoria</option>
                    @foreach (var category in categories)
                    {
                        <option value="@category.IdCategory">@category.TypeCategory</option>
                    }
                </select>
            </div>
            <div class="mt-3 text-center">
                <button type="submit" class="btn btn-success w-25 me-3">Actualizar</button>
                <a asp-controller="Book" asp-action="Index" class="btn btn-danger w-25">Volver</a>
            </div>
        </form>
    </div>
</div>