@{
    ViewData["Title"] = "Login";
}

@* <h1>@ViewData["Title"]</h1> *@

<div class="background">
    <div class="container-fluid">
        <div class="row justify-content-center m-3">
            <div class="col-12 content-head">
                <h1 class="align-center text-center display-2 fw-bolder">
                    <strong>Iniciar sesión </strong>
                </h1>
            </div>

        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8 mx-auto mbr-form">
                <form action="@Url.Content("~/Login")" method="post">

                    <div class="row">
                        <div class="col-md col-sm-12 mb-3">
                            <input type="text" name="user" placeholder="Email" class="form-control form-group all">
                        </div>

                        <div class="col-12 mb-3">
                            <input type="password" name="password" placeholder="Contraseña"
                                class="form-control form-group all">
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 align-center mbr-section-btn text-center">
                            <button type="submit"
                                class="btn btn-success display-7 w-50 rounded-pill p-3 all ">Ingresar</button>
                        </div>

                    </div>
                </form>

            </div>
        </div>
    </div>

</div>